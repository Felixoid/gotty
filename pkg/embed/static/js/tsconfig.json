{
  "compilerOptions": {
    "strict": true,
    "noUnusedLocals": true,
    "noImplicitThis": true,
    "outDir": "./dist/",
    "declaration": true,
    "sourceMap": true,
    "target": "ES2020",
    "module": "ES2020",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "lib": ["ES2020", "DOM"]
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules"]
}
